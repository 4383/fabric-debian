<VirtualHost $site_domain:80>
    ServerName $site_domain
    ServerAlias www.$site_domain static.$site_domain
    ServerAdmin administrator@$site_domain

    DocumentRoot $path_site
    WSGIScriptAlias / $path_sitewsgi.py
    #WSGIPythonPath /path/to/mysite.com

    <Directory $path_site>
        <Files wsgi.py>
            Order deny,allow
            Allow from all
        </Files>
    </Directory>

    Alias /robots.txt $path_siterobots.txt
    Alias /favicon.ico $path_sitefavicon.ico
    Alias /images $path_siteimages
    Alias /static $path_sitestatic

    ErrorLog $path_sitelogs/error.log
    CustomLog $path_sitelogs/access.log combined
</VirtualHost>
