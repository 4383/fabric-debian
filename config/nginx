server { 
    listen 80; 
    server_name vrp-online.com www.vrp-online.com;

    location /static/ {
        root  $path_site/source;
        gzip  on;
    } 

    location /media/ {
        root  $path_site/source;
        gzip  on; 
    }
    
    location / {
        gzip on;
        gzip_http_version 1.1;
        gzip_vary on;
        gzip_comp_level 6;
        gzip_proxied any;
        gzip_types text/plain text/html text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;
        proxy_pass http://127.0.0.1:8000; # Pass to Gunicorn
        proxy_set_header X-Real-IP $remote_addr; # get real Client IP
    }

    location ~* \.(?:ico|css|js|gif|jpe?g|png)$ {
      gzip on;
      expires 30d;
      add_header Pragma public;
      add_header Cache-Control "public";
    }
}

server {
    listen 80;
    server_name static.vrp-online.com;

    root $path_site/source/static; 

    location ~* \.(?:ico|css|js|gif|jpe?g|png)$ {
      expires 30d;
      add_header Pragma public;
      add_header Cache-Control "public";
    }
}

server {
    listen 80;
    server_name media.vrp-online.com;

    root $path_site/source/media;

    location ~* \.(?:ico|css|js|gif|jpe?g|png)$ {
      expires 30d;
      add_header Pragma public;
      add_header Cache-Control "public";
    }
}
